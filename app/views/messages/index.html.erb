<script type="text/javascript">

function ContentDivChange(id,idx,allNum)
{
    style1="menu_tab1";
    style2="menu_tab2";
    for(i=1;i<=allNum;i++)
    {
        document.getElementById("Content"+id+"_title_"+i).className=style2;
        document.getElementById("Content"+id+"_div_"+i).style.display="none";
    }
    document.getElementById("Content"+id+"_title_"+idx).className=style1;
    document.getElementById("Content"+id+"_div_"+idx).style.display="block";
    
}
checked=false;
function checkedAll (frm1) {
	var aa= document.getElementById(frm1);
	 if (checked == false)
          {
           checked = true
          }
        else
          {
          checked = false
          }
	for (var i =0; i < aa.elements.length; i++) 
	{
	 aa.elements[i].checked = checked;
	}
      }


    </script>
<div class="area">
