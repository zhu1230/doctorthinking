<div class='user'>
	<span style='float:left;width:50px;height:50px;padding:0px;'>
		<%=link_to image_tag(user.avatar.url(:thumb)),user_path(user)%>
		</span>
	<span style='width:130px;float:left;'>
		<div style='height:25px;vertical-align:baseline;color:#07C;font-weight: bold;padding-top:10px;'><%=link_to user.login,user_path(user)%></div>
		<div style='height:25px;padding-top:0px;'>
			<span title='发表 <%=user.bingli_infos.size%> 个病例'>
				<span class='badge1'></span>
			  	<span class='badgecount'><%=user.bingli_infos.size%></span>
			</span>
			<span title='发表 <%=user.bingli_comments.size%> 个讨论'>
				<span class='badge2'></span>
			  	<span class='badgecount'><%=user.bingli_comments.size%></span>
			</span>
			<span title='发表 <%=user.comments.size%> 个评论'>
				<span class='badge3'></span>
			  	<span class='badgecount'><%=user.comments.size%></span>
			</span>
		</div>
	</span>
</div>