if(!logged_in? )
  page.clearMessages
  page.showMessage("您需要  "+(link_to '登录',login_url,:style=>'color:red')+"  后才能使用投票功能。",:info)
  page.call 'votedownback','post_'+params[:id]
elsif(current_user.voted_on?(BingliComment.find(params[:id])))
