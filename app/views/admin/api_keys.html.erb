<style>
	table#admins th, table#admins td, table#users th, table#users td {
		text-align: left;
	}
	
	#content {
		width: 900px;
	}	
</style>


<h2 class="ic-db">User API Keys</h2>
<table id="users">
	<thead>
		<th width="50px">ID</th>
		<th width="70px">Login</th>
		<th width="90px">First Name</th>
		<th width="90px">Last Name</th>
		<th width="150px">Email</th>
		<th width="290px">API Key</th>
		<th width="380px">Actions</th>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= user.login %></td>
				<td><%= user.first_name %></td>
				<td><%= user.last_name %></td>
				<td><%= user.email %></td>
				<td><%= user.api_key %></td>
				<td>
					<%= link_to 'Delete Key', '/admin/api_delete_key?id=' + user.id.to_s, :confirm => 'Are you sure you want to delete this key?' %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>