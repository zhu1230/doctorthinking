<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
	<title><%= "医思网"+"--"+easy_title %></title>
	<link rel="shortcut icon" href="/favicon.ico" />
	<%= stylesheet_link_tag 'style' %>
	<%=stylesheet_link_tag 'default.css'%>
	<%= javascript_include_tag :defaults %>
	<%= stylesheet_link_tag "tag_clouds","pagination","top/style"%>	
		<%= javascript_include_tag "doctextsizer" %>
		<%= stylesheet_link_tag  "doctextsizer" %>
    <%= javascript_include_tag "slide_show" %>
    <script type="text/javascript">  	
		var authenticity_token = "<%= form_authenticity_token %>";		
		function resizeText(multiplier) { 
		  if ($('main_content').style.fontSize == ""){$('main_content').style.fontSize = "1.0em";} 
		  $('main_content').style.fontSize = parseFloat($('main_content').style.fontSize) + (multiplier * 0.2) + "em";
		}
    </script>
</head>
<body>
	<div id='content'>
			<%if (params[:controller]=="sessions" && params[:action]=="new") %>
			<%=render(:partial=>"shared/top_login")%>
			<%elsif(params[:controller]=="users" && params[:action]=="new")%>
			<%=render(:partial=>"shared/top_register")%>
			<%elsif(params[:controller]=="users" && params[:action]=="create" && !@user.errors.empty?) %>
			<%=render(:partial=>"shared/top_register")%>
			<%elsif logged_in? %>
			<%=render(:partial=>"shared/top_logon")%>
			<%else%>
			<%=render(:partial=>"shared/top_unlogon")%>
			<%end %>
	<div style='display:none;'><%=image_tag "/images/ajax-loader.gif", {:title => "提交中", :style => "margin-left: 10px;",:id => 'ajax-loader'} %></div>
	<%=render :partial=>"shared/nav_bar"%>
	<%=render :partial=>"shared/message_bar"%>
	
		<div id='main_content' style="clear:both;width:958px;margin:0px auto;padding-top: 15px;">
				<%= yield  %>
				</div>
		
<%=render :partial=>"shared/bottom"%>
</div>
</body>
</html>
