<%#=render :partial => "invite_menu"%>
<style type="text/css" media="screen">
	.invites{
		margin: 0px auto;
		width:900px;
		font-size:20px;
	}
	.invite{
		clear:both;margin:0px 20px 0px 30px;
		height:30px;
		border-bottom: 1px solid #CCC;
		padding:10px 0px;
	}
	.invite:hover{background-color:#fafafa;}
	
	.invite_email{
		width:400px;
		float:left;
	}
	.invite_intro{
		width:200px;
		float:left;
	}
	.invite_opertate{
		width:100px;
		float:left;
	}
</style>
<div id="answers-header">
	        <div class="subheader answers-subheader">
	            <h1 class='summary-header'>邀请(<span class='summarycount'><%=@invites.total_entries%></span>)：</h1>
	            <div id="tabs">
		<%=link_to '发送邀请',new_invite_path%>
		<%=link_to '已发送的邀请',user_invites_path(current_user),{:class => 'youarehere'} %>
		<%#=link_to '收藏的病例',user_path(@user,:tap => :favorite),({:class => 'youarehere'} if params[:tap]=='favorite')%>
		<%#=link_to '参与讨论的',user_path(@user,:tap => :involved)%>
	            </div>
	        </div>
</div>
<div id='invites' class='invites'><% for invite in @invites %>

<div class='invite'>	<span class='invite_email'><%=invite.email%></span>
    <span class='invite_intro'><%= link_to '显示详细内容', invite %></span>
    <span class='invite_opertate'><%= link_to '删除', invite, :confirm => '你确定删除吗?', :method => :delete %></span></div>

<% end %>
<div style='float:right;'><%=will_paginate @invites,:class => 'digg_paginate'%></div>
</div>
