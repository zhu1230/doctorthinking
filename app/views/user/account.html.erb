<%= stylesheet_link_tag "in_place_styles" %>

<div class="area">
	
<%=render :partial=>"shared/account_menu"%>
        
    
    <div class="cont">
    	<ul>
        	<li>
                <div><h3>昵称</h3><span>
                <a id="name_edit">修改</a></span></div>
                <p><%=in_place_text_field :user,'name',{:external_control => 'name_edit'}%></p>
            </li>
            <li>
                <div><h3>电子邮件</h3><span>
                <a id='mail_edit'>修改</a></span></div>
                <p><%=in_place_text_field :user,'email',{:click_to_edit_text => '编辑',:external_control => 'mail_edit'}%></p>
            </li>
            <li>
                <h3>科室</h3>
                <span>
                <a id='edit_keshi'>修改</a></span>
                <p><%=in_place_select :user,'keshiinplace',{:choices=>grouped_options_for_select(keshi_by_groups,current_user.keshi.id,'-选择分类-'),:external_control => 'edit_keshi'}%></p>
            </li>
            <!-- <li>
                <h3>职称</h3><span>
                <a id='edit_zhicheng'>修改</a></span>
                <p><%#=in_place_select :user,'zhicheng_title',{:choices=>$zhicheng.invert.to_a,:external_control => 'edit_zhicheng'}%></p>
            </li> -->
            <li>
                <h3>个人说明</h3><span>
                <a id='about_me'>修改</a></span>
                <p><%=in_place_text_area :user,'about_me',{:style=>"float:left;width:500px;height:100px;border:1px #889BAA solid;color:#999;font-size:12px;padding:6px;",:external_control => 'about_me'}%></p>
            </li>
            <li>
                <h3>接收社区邮件选项</h3><span>
                <a id='receive'>修改</a></span>
                <p><%=in_place_radio_collection :user,'receive',{:choices=>[['接收','1'],['不接收','0']],:external_control => 'receive'}%></p>
            </li>
            <li>
                <h3>社区头像</h3><span>
                <a id='mail_edit' onclick="$('avatar_old').hide();$('avatar_new').show();">修改</a></span>
                <p><span id='avatar_old' style='padding-top:10px;'><%=current_user.avatar ? image_tag(current_user.avatar.url(:medium), :alt=>current_user.name) : "目前没有设置头像"%></span>
<div id='avatar_new' style='display:none;border-top: 1px solid #d8d8d8;width:730px;float:left;text-indent:1em;line-height:22px;padding:0px 0px 10px 0px; margin-bottom:20px;margin-left: 10px;'><%=form_tag({:action=>"update_avatar",:controller=>"/user"},:multipart => true)%><%=file_field_tag 'avatar',{:accept => 'image/png,image/gif,image/jpeg'}%><%=submit_tag "完成",:disable_with => '上传中...' %><%=link_to_function "取消","$('avatar_new').hide();$('avatar_old').show();return false;"%></form></div></p>
