<%#= stylesheet_link_tag 'forum' %>

<h1>发表帖子</h1>		
<div id="add_forum" style='display:block'>
	<% form_for(:forum_post, :url => forum_posts_path, :html => { :multipart => true }) do |f| -%>		
		<%= f.error_messages %>
		<%= f.hidden_field :forum_topic_id %>
		<div class="form_field">
	    	<label for="title">主题:</label><br/>
			<%= f.text_field :title, :class=>'input_field' %>
		</div>
		<div class="form_field">
	    	<label for="body">内容:</label><br/>
			<%= f.text_area :body, :cols=>80, :rows=>30, :class=>"mceEditor" %>
		</div>
		<div style='display:block'><label>标签:</label>
			<%=f.text_field :tag_list%></div>
	    <%= f.submit "发表", :class=>'add_button' %>
	<% end %>
	<div style="clear:both;"></div>
</div>
<div style="clear:both;"></div>

